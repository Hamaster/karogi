<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/yellow"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/valstsNosaukums"
        android:text="Valsts Nosaukums"
        android:textColor="@color/darkBrown"
        android:textSize="20.0sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

     <View
        android:id="@+id/view1"
        android:layout_height="1dp"
        android:layout_width="2dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="170dip"
        android:layout_height="100dip"
        android:id="@+id/imageButton_firstOption"
        android:layout_below="@+id/valstsNosaukums"
        android:layout_toLeftOf="@+id/view1"
        android:layout_marginTop="27dp" />

    <ImageButton
        android:layout_width="170dip"
        android:layout_height="100dip"
        android:id="@+id/imageButton_secondOption"
        android:layout_toLeftOf="@+id/view1"
        android:layout_toStartOf="@+id/view1"
        android:layout_below="@+id/imageButton_firstOption" />

    <ImageButton
        android:layout_width="170dip"
        android:layout_height="100dip"
        android:id="@+id/imageButton_thirdOption"
        android:layout_alignTop="@+id/imageButton_firstOption"
        android:layout_toRightOf="@+id/view1"/>

    <ImageButton
        android:layout_width="170dip"
        android:layout_height="100dip"
        android:id="@+id/imageButton_forthOption"
        android:layout_alignTop="@+id/imageButton_secondOption"
        android:layout_toRightOf="@+id/view1"/>


    <ImageButton
        android:layout_width="142dip"
        android:layout_height="46dip"
        android:id="@+id/imageButton_partraukt"
        android:background="@drawable/partraukt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>