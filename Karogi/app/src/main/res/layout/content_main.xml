<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/yellow"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:layout_width="142dip"
        android:layout_height="46dip"
        android:id="@+id/imageButton_afrika"
        android:background="@drawable/afrika_unselected"
        android:layout_below="@+id/imageButton_visas_valstis"
        android:layout_alignLeft="@+id/izveliesregionus"
        android:layout_alignStart="@+id/izveliesregionus"
        android:layout_marginTop="5dp"/>

    <ImageButton
        android:layout_width="142dip"
        android:layout_height="46dip"
        android:id="@+id/imageButton_australija_un_okeanija"
        android:background="@drawable/australija_un_okeanija_unselected"
        android:layout_below="@+id/imageButton_afrika"
        android:layout_toLeftOf="@+id/imageButton_eiropa"
        android:layout_toStartOf="@+id/imageButton_eiropa" />

    <ImageButton
        android:layout_width="142dip"
        android:layout_height="46dip"
        android:id="@+id/imageButton_azija"
        android:background="@drawable/azija_unselected"
        android:layout_below="@+id/imageButton_ziemel_amerika"
        android:layout_toLeftOf="@+id/imageButton_eiropa"
        android:layout_toStartOf="@+id/imageButton_eiropa" />

    <ImageButton
        android:layout_width="142dip"
        android:layout_height="46dip"
        android:id="@+id/imageButton_dienvid_amerika"
        android:background="@drawable/dienvid_amerika_unselected"
        android:layout_alignTop="@+id/imageButton_afrika"
        android:layout_alignLeft="@+id/imageButton_eiropa"
        android:layout_alignStart="@+id/imageButton_eiropa" />

    <ImageButton
        android:layout_width="142dip"
        android:layout_height="46dip"
        android:id="@+id/imageButton_ziemel_amerika"
        android:background="@drawable/ziemel_amerika_unselected"
        android:layout_below="@+id/imageButton_australija_un_okeanija"
        android:layout_toLeftOf="@+id/imageButton_eiropa"
        android:layout_toStartOf="@+id/imageButton_eiropa" />

    <ImageButton
        android:layout_width="142dip"
        android:layout_height="46dip"
        android:id="@+id/imageButton_eiropa"
        android:background="@drawable/eiropa_unselected"
        android:layout_below="@+id/imageButton_dienvid_amerika"
        android:layout_toRightOf="@+id/imageButton_afrika"
        android:layout_toEndOf="@+id/imageButton_afrika" />

    <ImageButton
        android:layout_width="180dip"
        android:layout_height="60dip"
        android:id="@+id/imageButton_visas_valstis"
        android:background="@drawable/visas_valstis_unselected"
        android:layout_below="@+id/izveliesregionus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:id="@+id/imageButton_rekordi"
        android:background="@drawable/rekordi"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageButton_azija"
        android:layout_alignStart="@+id/imageButton_azija" />

    <ImageButton
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:id="@+id/imageButton_sakt"
        android:background="@drawable/sakt_unactive"
        android:layout_alignTop="@+id/imageButton_rekordi"
        android:layout_alignRight="@+id/imageButton_eiropa"
        android:layout_alignEnd="@+id/imageButton_eiropa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/izveliesregionus"
        android:text="Izvēlies reģionus:"
        android:textColor="@color/darkBrown"
        android:layout_below="@+id/imageButton_5"
        android:layout_alignLeft="@+id/imageButton_5"
        android:layout_alignStart="@+id/imageButton_5"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:id="@+id/imageButton_5"
        android:background="@drawable/i5_unselected"
        android:layout_below="@+id/izveliesjautajumuskaitu"
        android:layout_toLeftOf="@+id/imageButton_visas_valstis"
        android:layout_toStartOf="@+id/imageButton_visas_valstis"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:id="@+id/imageButton_10"
        android:background="@drawable/i10_unselected"
        android:layout_alignTop="@+id/imageButton_5"
        android:layout_toRightOf="@+id/imageButton_5"
        android:layout_toEndOf="@+id/imageButton_5" />

    <ImageButton
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:id="@+id/imageButton_15"
        android:background="@drawable/i15_unselected"
        android:layout_alignTop="@+id/imageButton_10"
        android:layout_toRightOf="@+id/imageButton_10"
        android:layout_toEndOf="@+id/imageButton_10" />

    <ImageButton
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:id="@+id/imageButton_20"
        android:background="@drawable/i20_unselected"
        android:layout_alignTop="@+id/imageButton_15"
        android:layout_toRightOf="@+id/imageButton_15"
        android:layout_toEndOf="@+id/imageButton_15" />

    <ImageButton
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:id="@+id/imageButton_50"
        android:background="@drawable/i50_unselected"
        android:layout_alignTop="@+id/imageButton_20"
        android:layout_toRightOf="@+id/imageButton_20"
        android:layout_toEndOf="@+id/imageButton_20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/izveliesjautajumuskaitu"
        android:text="Izvēlies jautājumu skaitu:"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageButton_5"
        android:layout_alignStart="@+id/imageButton_5"
        android:textColor="@color/darkBrown" />


</RelativeLayout>
